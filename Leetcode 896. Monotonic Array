class Solution {
    public boolean isIncreasing(int[] nums,int i){
        for(int j=i;j<nums.length-1;j++){
            if(nums[j]>nums[j+1])
            return false;
        }
        return true;
    }

     public boolean isDecreasing(int[] nums,int i){
        for(int j=i;j<nums.length-1;j++){
            if(nums[j]<nums[j+1])
            return false;
        }
        return true;
    }

    public boolean isMonotonic(int[] nums) {
        for(int i=0;i<nums.length-1;i++){
            if(nums[i]<nums[i+1]){
                return isIncreasing(nums,i);
            }
            else if(nums[i]>nums[i+1]){
                return isDecreasing(nums,i);
            }
            else{
                continue;
            }
        }

        return true;
    }
}
