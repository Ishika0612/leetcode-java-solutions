class Solution {
     public void findSubset(int[] nums, int i, List<Integer>arr,List<List<Integer>>ans){
        if(i==nums.length){
            ans.add(new ArrayList<>(arr));
            return;
        }

        findSubset(nums,i+1,arr,ans);

        arr.add(nums[i]);
        findSubset(nums,i+1,arr,ans);

        arr.remove(arr.size() - 1);   
     }

    public List<List<Integer>> subsets(int[] nums) {
         List<Integer>arr = new ArrayList<>();
        List<List<Integer>>ans = new ArrayList<>();
         findSubset(nums,0,arr,ans);
         return ans;
    }
}
