class Solution {
    public int countAsterisks(String s) {
        boolean isVerticalBar=false;
        int countAsterisk=0;

        for(int i=0;i<s.length();i++){
            if(!isVerticalBar && s.charAt(i)=='*')
            countAsterisk++;
           else if(s.charAt(i)=='|')
           isVerticalBar = !isVerticalBar;
        }

        return countAsterisk;
    }
}
