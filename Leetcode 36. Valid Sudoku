class Solution {
    public boolean isValidSudoku(char[][] board) {
    int[] arr = new int[10];

//check if any duplicate exists in any row
     for(int i=0;i<9;i++){
        Arrays.fill(arr, 0);
        for(int j=0;j<9;j++){
            if(board[i][j]!='.'){
                int x = board[i][j] - '0';
                if(arr[x]==1)
                return false;

                arr[x]++;
            }
        }
     }   

//check if any duplicate exists in any column
      for(int i=0;i<9;i++){
        Arrays.fill(arr, 0);
        for(int j=0;j<9;j++){
            if(board[j][i]!='.'){
                int x = board[j][i] - '0';
                if(arr[x]==1)
                return false;

                arr[x]++;
            }
        }
     } 

//check if any duplicate exists in 3x3 grid  
 for (int blockRow = 0; blockRow < 3; blockRow++) {
            for (int blockCol = 0; blockCol < 3; blockCol++) {
               Arrays.fill(arr, 0);
                for (int i = 0; i < 3; i++) {
                    for (int j = 0; j < 3; j++) {
                        char c = board[blockRow * 3 + i][blockCol * 3 + j];
                        if (c != '.') {
                            int x = c - '0';
                            if (arr[x] == 1) return false;
                            arr[x] = 1;
                        }
                    }
                }
            }
        }

     return true;

    }
}
