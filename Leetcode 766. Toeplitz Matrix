class Solution {
    public boolean isToeplitzMatrix(int[][] matrix) {

       for(int i=0;i<matrix.length-1;i++){
         for(int j=0;j<matrix[0].length-1;j++){
        int col=j+1;
        int row=i+1;
        int num = matrix[i][j];

        if(row<matrix.length && col<matrix[0].length){
             if(num!=matrix[row][col]){
            return false;
          }
        }

        }

       } 

       return true;
    }
}
